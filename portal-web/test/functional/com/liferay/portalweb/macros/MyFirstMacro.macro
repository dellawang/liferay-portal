definition{

	macro login{
		Open(locator1 = "http://localhost:8080");

		AssertClick(
			locator1 = "LRLogin#SIGN_IN_URL",
			value1 = "Sign In");

		Type(
			locator1 = "LRLogin#EMAIL_ADDRESS_FIELD",
			value1 = "${emailAddress}");
		Type(
			locator1 = "LRLogin#PASSWORD_FIELD",
			value1 = "${password}");

		var key_buttonName = "Sign In";

		AssertClick(
			locator1 = "LRLogin#BUTTON",
			value1 = "Sign In");

		var key_buttonName = "I Agree";

		while(IsElementPresent(locator1 = "LRLogin#BUTTON")) {
			AssertClick(
			locator1 = "LRLogin#BUTTON",
			value1 = "I Agree");

		Type(
			locator1 = "LRPasswordReminder#PASSWORD_REMINDER_FIELD",
			value1 = "${midName}");

		var key_buttonName = "Save";

		AssertClick(
			locator1 = "LRLogin#BUTTON",
			value1 = "Save");			
		}
		
	}

	macro assertLogin{
		Click(locator1 = "LRWelcome#AVATAR_BUTTON");

		AssertTextEquals(
			locator1 = "LRWelcome#NAME_LI",
			value1 = "${assertUser}");
	}

}